{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>Event</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"Title"|trans}}</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>{{"Short title"|trans}}</th>
                <td>{{ entity.shortTitle }}</td>
            </tr>
            <tr>
                <th>Headline</th>
                <td>{{ entity.headline }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>{{"Header Image"|trans}}</th>
                <td>
                    <a href="/{{entity.uploadDir}}/{{ entity.headerImage }}" target="_blank">
                        <img src="/{{entity.uploadDir}}/{{ entity.headerImage }}" height="100" />
                    </a>
                </td>
            </tr>
            <tr>
                <th>Footertext</th>
                <td>{{ entity.footerText }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Reservationdeadline</th>
                <td>{{ entity.reservationDeadline|date('Y-m-d') }}</td>
            </tr>
            <tr>
                <th>Cancellationpolicy</th>
                <td>{{ entity.cancellationPolicy }}</td>
            </tr>
            <tr>
                <th>Paymentterms</th>
                <td>{{ entity.paymentTerms }}</td>
            </tr>
        </tbody>
    </table>

    <div class="btn-group">
        <a class="btn btn-default" href="{{ path('admin_event') }}">
            Back to the list
        </a>
        <a class="btn btn-default" href="{{ path('admin_event_edit', { 'id': entity.id }) }}">
            Edit
        </a> 
        <a class="btn btn-default" href="{{ path('admin_event_timeline', { 'eventId': entity.id }) }}">
            Edit Timeline 
        </a> 
    </div>
    <hr>

    {{ form(delete_form) }} 
{% endblock %}
