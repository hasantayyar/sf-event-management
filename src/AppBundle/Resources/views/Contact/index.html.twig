{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>{{"Contact Records"|trans}}</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{"Contact Title"|trans}}</th>
                <th>{{"First Name"|trans}}</th>
                <th>{{"Middle Name"|trans}}</th>
                <th>{{"Last Name"|trans}}</th>
                <th>{{"Email"|trans}}</th>
                <th>{{"Actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_contact_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.firstName }}</td>
                    <td>{{ entity.middleName }}</td>
                    <td>{{ entity.lastName }}</td>
                    <td>{{ entity.email }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_contact_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_contact_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <a  class="btn btn-success" href="{{ path('admin_contact_new') }}">
        {{"Create"|trans}}
    </a>

{% endblock %}
