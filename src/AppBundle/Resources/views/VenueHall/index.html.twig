{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>Venue Hall list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Shortname</th>
                <th>Venueid</th>
                <th>Capacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('admin_venue_hall_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.shortName }}</td>
                <td>{{ entity.venueId }}</td>
                <td>{{ entity.capacity }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('admin_venue_hall_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('admin_venue_hall_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('admin_venue_hall_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
