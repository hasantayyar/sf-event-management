{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>{{"timeline.for.event"|trans({'%link%': path("admin_event_show",{id:event.id}), '%title%' :event.shortTitle})|raw }} </h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Event</th>
                <th>Title</th>
                <th>Description</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('timeline_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
<td>{{ entity.event }} <a href="{{path("admin_event_show",{id:entity.eventId})}}"> #{{ entity.eventId}} </a> </td>
<td>{{ entity.title }}</td>
<td>{{ entity.description }}</td>
<td>{% if entity.date %}{{ entity.date|date('Y-m-d') }}{% endif %}</td>
<td>

    <a href="{{ path('timeline_show', { 'id': entity.id }) }}">show</a>
    <a href="{{ path('timeline_edit', { 'id': entity.id }) }}">edit</a>
</td>
</tr>
{% endfor %}
</tbody>
</table>


<a class="btn btn-success" href="{{ path('timeline_new') }}">
    {{"Create"|trans}}
</a>

{% endblock %}
