{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Address list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Fulladdress</th>
                <th>Latitute</th>
                <th>Longitude</th>
                <th>City</th>
                <th>Countryid</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_address_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.fullAddress }}</td>
                    <td>{{ entity.latitute }}</td>
                    <td>{{ entity.longitude }}</td>
                    <td>{{ entity.city }}</td>
                    <td>{{ entity.countryId }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_address_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_address_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_address_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
{% endblock %}
