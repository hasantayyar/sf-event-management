{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>Inventory Item</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>{{"Barcode"|trans}}</th>
                <td>
                    {{ barcode({code: ""~entity.id, type: 'ean13', format: 'svg'}) }}

                </td>

            </tr>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"Name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"Serial code"|trans}}</th>
                <td>{{ entity.serialCode }}</td>
            </tr>
            <tr>
                <th>{{"Vendor"|trans}}</th>
                <td>{{ entity.vendor.name }}</td>
            </tr>
            <tr>
                <th>{{"Is available?"|trans}}</th>
                <td>{{ entity.isAvailable }}</td>
            </tr>
            <tr>
                <th>{{"Description"|trans}}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>
    <a  class="hidden-print  btn btn-info" href="{{ path('admin_inventory_item') }}">
        {{"Back to the list"|trans}}
    </a>
    <a  class="hidden-print btn btn-warning" href="{{ path('admin_inventory_item_edit', { 'id': entity.id }) }}">
        {{"Edit"|trans}}
    </a>
    <a  class="hidden-print  btn btn-default" href="#" onclick="javascript:window.print();">
        <i class="fa fa-print"></i> {{"Print"|trans}}
    </a>
    <hr>
    {{ form(delete_form) }}
{% endblock %}
