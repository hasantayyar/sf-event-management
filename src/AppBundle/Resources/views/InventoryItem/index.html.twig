{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>InventoryItem list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{"Name"|trans}}</th>
                <th>{{"Serial code"|trans}}</th>
                <th>{{"Vendor"|trans}}</th>
                <th>{{"Is Available?"|trans}}</th>
                <th>{{"Description"|trans}}</th>
                <th>{{"Actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_inventory_item_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.serialCode }}</td>
                    <td>{{ entity.vendor.name }}</td>
                    <td>{{ entity.isAvailable }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_inventory_item_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_inventory_item_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_inventory_item_new') }}">
        <i class="fa fa-plus"></i>  {{"Create"|trans}}
    </a>

{% endblock %}
