{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>Page list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Tags</th>
                <th>Is Top Link</th>
                <th>Is Footer Link?</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_page_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.title }}</td>
                    <td>{{ entity.content }}</td>
                    <td>{{ entity.tags }}</td>
                    <td>{{ entity.isToplink }}</td>
                    <td>{{ entity.isFooterlink }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_page_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_page_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-info" href="{{ path('admin_page_new') }}">
        <i class="fa fa-plus"></i>  {{"Create"|trans}}
    </a> 
{% endblock %}
