{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>Hotel</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"Name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Stars</th>
                <td>{{ entity.stars }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Contact</th>
                <td>{{ entity.contactId }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_hotel') }}">
        Back to the list
    </a>
    <a href="{{ path('admin_hotel_edit', { 'id': entity.id }) }}">
        Edit
    </a>
    <hr>
    {{ form(delete_form) }}

{% endblock %}
