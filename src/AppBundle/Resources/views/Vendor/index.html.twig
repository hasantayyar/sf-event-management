{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>{{"Vendor List"|trans}}</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{"Name"|trans}}</th>
                <th>{{"Description"|trans}}</th>
                <th>{{"Actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_vendor_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.description }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_vendor_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_vendor_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <hr>
    <a class="btn btn-info" href="{{ path('admin_vendor_new') }}">
        {{"Create"|trans}}
    </a>

{% endblock %}
