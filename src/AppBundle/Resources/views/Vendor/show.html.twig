{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>{{"Vendor"|trans}}</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>{{"Name"|trans}}</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>{{"Description"|trans}}</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

    <a  class="btn btn-info" href="{{ path('admin_vendor') }}">
        {{"Back to the list"|trans}}
    </a>
    <a  class="btn btn-warning" href="{{ path('admin_vendor_edit', { 'id': entity.id }) }}">
        {{"Edit"|trans}}
    </a>
    <hr>
    {{ form(delete_form) }} 
{% endblock %}
