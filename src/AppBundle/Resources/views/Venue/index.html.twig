{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>{{"Venue list"|trans}}</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>{{"Name"|trans}}</th>
                <th>{{"Country"|trans}}</th>
                <th>{{"City"|trans}}</th>
                <th>{{"Capacity"|trans}}</th>
                <th>{{"Actions"|trans}}</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_venue_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.country }}</td>
                    <td>{{ entity.city }}</td>
                    <td>{{ entity.capacity }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_venue_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_venue_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
    <hr>
    <a class="btn btn-default" href="{{ path('admin_venue_new') }}">
        {{"Create a new entry"|trans}}
    </a> 
{% endblock %}
