{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>TransferPoint</h1>

    <table class="record_properties table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ entity.country }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ entity.city }}</td>
            </tr>
            <tr>
                <th>Fulladdress</th>
                <td>{{ entity.fullAddress }}</td>
            </tr>
            <tr>
                <th>Latitude</th>
                <td>{{ entity.latitude }}</td>
            </tr>
            <tr>
                <th>Longitude</th>
                <td>{{ entity.longitude }}</td>
            </tr>
        </tbody>
    </table>


    <a href="{{ path('admin_transfer_points') }}">
        Back to the list
    </a>
    <a href="{{ path('admin_transfer_points_edit', { 'id': entity.id }) }}">
        Edit
    </a>
    <hr>
    {{ form(delete_form) }}
{% endblock %}
