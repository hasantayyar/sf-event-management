{% extends '::base_admin.html.twig' %}

{% block content -%}
    <h1>TransferPoint list</h1>

    <table class="records_list table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Country</th>
                <th>City</th>
                <th>Fulladdress</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td><a href="{{ path('admin_transfer_points_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                    <td>{{ entity.name }}</td>
                    <td>{{ entity.country }}</td>
                    <td>{{ entity.city }}</td>
                    <td>{{ entity.fullAddress }}</td>
                    <td>{{ entity.latitude }}</td>
                    <td>{{ entity.longitude }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('admin_transfer_points_show', { 'id': entity.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('admin_transfer_points_edit', { 'id': entity.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>


    <a href="{{ path('admin_transfer_points_new') }}">
        Create a new entry
    </a> 
{% endblock %}
