{% extends "::base.html.twig" %}
{% block stylesheets %}
    {{parent()}}
    <link rel="stylesheet" href="{{ asset('bundles/app/css/app_admin.css') }}" />
{% endblock%}
{% block body %}  
    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-default navbar-static-top" role="navigation" style="margin-bottom: 0">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href=" {{path("admin_index")}}">{{"Home"|trans}}</a>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation"  >
                        <a href="#" class="dropdown-toggle" type="button"
                           id="profileDropDown" data-toggle="dropdown" aria-expanded="true">
                            {{app.user.username}}
                            <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu" role="menu" aria-labelledby="profileDropDown">
                            <li role="presentation"><a role="menuitem" tabindex="-1" 
                                                       href="{{ path('fos_user_profile_show') }}">
                                    {{"Profile"|trans}} </a></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1"
                                                       href="{{ path('fos_user_change_password') }}">
                                    {{"Change Password"|trans}}</a></li> 
                            <li role="presentation">
                                {% if is_granted('ROLE_SUPER_ADMIN')%}
                                    <a href="{{path('admin_index')}}">{{"Admin Dashboard"|trans}}</a>
                                {%else %}
                                    <a href="{*path('user_index')*}">{{"User Dashboard"|trans}}</a>
                                {%endif%}
                            </li> 
                            <li class="divider"></li>
                            <li role="presentation"><a role="menuitem" tabindex="-1" 
                                                       href="{{ path('fos_user_security_logout') }}">
                                    <i class="fa fa-sign-out"></i> {{ 'Logout'|trans }}  </a></li>
                        </ul> 
                    </li>
                    <li role="presentation">
                        {% include '::language_selector.html.twig' %}
                    </li>
                </ul>

            </div>
            <!-- /.navbar-top-links -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">
                    <ul class="nav" id="side-menu">
                        <li class="sidebar-search">
                            <div class="input-group custom-search-form">
                                <input type="text" class="form-control" placeholder="Search...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </span>
                            </div>
                            <!-- /input-group -->
                        </li>
                        <li>
                            <a href="{{path('admin_index')}}"><i class="fa fa-dashboard fa-fw"></i> {{"Admin Dashboard"|trans}}</a>
                        </li>
                        <li>
                            <a href="{{path("admin_event")}}"><i class="fa fa-bolt"></i> {{"Events"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_page")}}"><i class="fa fa-user"></i> {{"Users"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_hotel")}}"><i class="fa fa-hotel"></i> {{"Hotels"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_venue")}}"><i class="fa fa-building"></i> {{"Venues"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_transfer_points")}}"><i class="fa fa-train"></i> {{"Transfer Points"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_inventory_item")}}"><i class="fa fa-circle"></i> {{"Inventory"|trans}}  </a>
                        </li>
                        <li>
                            <a href="{{path("admin_vendor")}}"><i class="fa fa-institution"></i> {{"Vendor Records"|trans}}</a>
                        </li>
                        <li>
                            <a href="{{path("admin_contact")}}"><i class="fa fa-users"></i> {{"Contact Records"|trans}}</a>
                        </li>
                        <li>
                            <a href="{{path("admin_page")}}"><i class="fa fa-files-o"></i> {{"Pages"|trans}}  </a>
                        </li>

                        <li>
                            <a href="#"><i class="fa fa-files-o fa-fw"></i> Sample  </a>
                            <ul class="nav nav-second-level">
                                <li>
                                    <a href="blank.html">Blank Page</a>
                                </li>
                                <li>
                                    <a href="login.html">Test Page</a>
                                </li>
                            </ul>
                            <!-- /.nav-second-level -->
                        </li>
                    </ul>
                </div>
                <!-- /.sidebar-collapse -->
            </div>
            <!-- /.navbar-static-side -->
        </nav>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12"> 
                    {% block content %}

                    {% endblock %}
                </div>
                <!-- /.col-lg-12 -->
            </div>
            <!-- /.row -->  

        </div>
        <!-- /#page-wrapper -->

    </div>


{% endblock %}

